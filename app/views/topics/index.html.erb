<p id="notice"><%= notice %></p>

<h1>Topics</h1>
<div class="ui centered cards">

<% @topics.each do |topic| %>
  <div class="card">
    <div class="content">
      <div class="header"><%= topic.author %></div>
      <div class="description"><%= topic.description %></div>
    </div>
    <div class="ui bottom attached basic buttons">
      <%= link_to 'Ideas', topic , class: 'ui button'%>
      <%= link_to 'Edit', edit_topic_path(topic), class: 'ui button' %>
      <%= link_to 'Destroy', topic, class: 'ui button',
                                    method: :delete, 
                                    data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>

</div>

