 <div class="comment">
    <div class="content">
      <span class="author"><%= idea.author %></span>
      <div class="text">
        <%= idea.description %>
      </div>
      <div class="actions">
        <%= link_to 'Destroy Idea', [idea.topic, idea],
               class: 'reply',
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
</div>